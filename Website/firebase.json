{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
		"rewrites": [{
			"source":"/helloWorld",
			"function": "helloWorld"
		},
		{
			"source":"/login",
			"function": "login"
		}]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
